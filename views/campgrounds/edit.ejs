<% layout('layouts/boilerplate') %>

    <h1>Edit Campground</h1>
    <form action="/campgrounds/<%= foundCamp._id %>?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="campground[title]" value="<%= foundCamp.title %>">
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="campground[location]" value="<%=foundCamp.location %>">
        </div>
        <button>Update</button>
    </form>
    <footer>
        <a href="/campgrounds/<%= foundCamp._id %>">Back To Campground</a>
    </footer>