<% layout('layouts/boilerplate') %>

    <div class="container d-flex justify-content-center align-items-centrer mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1588202203119-bd994abd941e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8ODN8fGNhbXBpbmd8ZW58MHx8MHx8fDA%3D&auto=format&fit=crop&w=500&q=60"
                        class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title">Register</h5>
                        <form action="/register" method="POST" class="validated-form" novalidate>

                            <div class="form-group mb-3">
                                <label class="form-label" for="email">Email</label>
                                <input class="form-control" type="email" id="email" name="email" autofocus required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="form-group mb-3">
                                    <label class="form-label" for="username">Username</label>
                                    <input class="form-control" type="text" id="username" name="username" required>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="form-label" for="password">Password</label>
                                        <input class="form-control" type="password" id="password" name="password"
                                            required>
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                    <div class="mb-3 d-grid gap-2">
                                        <button class="btn btn-success">Register</button>
                                    </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="mb-3  mt-3">
            Already registered? <a class="btn btn-sm btn-outline-danger" href="/login">Login</a>
        </div>
    </div>